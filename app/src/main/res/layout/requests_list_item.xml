<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/transparentWhite05"
    >

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/requestsListItemBikerPicImgv"-->
        <!--android:layout_width="75dp"-->
        <!--android:layout_height="75dp"-->
        <!--android:src="@drawable/bikerpic"-->
        <!--android:layout_marginRight="16dp"/>-->

    <TextView
        android:id="@+id/requestsListItemItemDescriptionTxv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small sized mail"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requestsListItemItemDescriptionTxv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/requestsListItemDistanceTxv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.4 km"
            android:textColor="@color/colorTextIcons"
            android:background="@color/transparentWhite05"
            android:padding="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/requestsListItemFeeTxv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 25,80"
            android:textColor="@color/colorTextIcons"
            android:background="@color/transparentWhite05"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/requestsListItemGetBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorTextIcons"
        android:background="@color/colorAccent"
        android:text="GET"/>



</RelativeLayout>

